{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
{{! The big featured header }}
{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    <section class="author-profile inner container" style="padding-top: 90px;">
        <div class="panel panel-success">
          <div class="panel-heading">作者相关信息</div>
          <div class="panel-body">
            <table class="table" style="margin-bottom: 5px;">
              <tbody>
                <tr>
                  <th scope="row">作者</th>
                  <td>
                    <img class="author-thumb rotate-anime" src="{{image}}" alt="{{name}}" nopin="nopin"><a class="label label-success" href="{{url}}">{{name}}</a> <span class="label label-default">in {{location}}</span><p style="margin-bottom: 0;"><small><i>"{{bio}}"</i></small></p>
                  </td>
                </tr>
                <tr>
                  <th scope="row">总计</th>
                  <td>
                    {{plural ../pagination.total empty='还没有发表任何内容' singular='% 篇文章' plural='% 篇文章'}}
                  </td>
                </tr>                
              </tbody>
            </table>
          </div>
        </div><!-- panel -->   
    </section>
{{/author}}
{{! The main content area on the homepage }}
<main class="content container" role="main">
    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</main>