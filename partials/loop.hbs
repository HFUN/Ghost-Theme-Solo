{{#foreach posts}}{{! This is the post loop - each post will be output using this markup }}
<article class="{{post_class}} post-index">
  <header class="post-header">
    <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
  </header>
  <section class="post-excerpt">
    <p>{{excerpt characters="100"}} <a class="read-more" href="{{url}}">阅读全文</a></p>
  </section>
  <footer class="post-meta">
    {{#author}}<a class="label label-success" href="{{url}}">{{name}}</a>{{/author}} <time class="label label-default" datetime="{{date format='YYYY-MM-DD'}}">{{date format="YYYY-MM-DD"}}</time>
    <span class="pull-right">
      {{#foreach tags}}&nbsp;<a href="{{url}}" title="{{name}}" class="label label-info">{{name}}</a>{{/foreach}}
    </span>
  </footer>
</article>
{{/foreach}}
{{pagination}}{{! 调用 /partials/pagination.hbs }}